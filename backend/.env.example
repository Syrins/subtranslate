# ============================================
# SubTranslate Backend â€” Environment Variables
# ============================================
# Copy this file to .env and fill in your values.
# For Coolify: set these as environment variables in the service settings.

# --- Supabase ---
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# --- Redis (Coolify creates this automatically via docker-compose) ---
REDIS_URL=redis://redis:6379/0
REDIS_USERNAME=
REDIS_PASSWORD=

# --- Cloudflare R2 Storage (for CDN / external storage) ---
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_BUCKET_NAME=subtranslate
R2_CDN_DOMAIN=cdn.yourdomain.com

# --- AI Translation Keys (system-level defaults, optional) ---
OPENAI_API_KEY=
DEEPL_API_KEY=
GEMINI_API_KEY=

# --- Server ---
HOST=0.0.0.0
PORT=8000
DEBUG=false
CORS_ORIGINS=https://yourdomain.com

# --- Upload & Storage ---
MAX_UPLOAD_SIZE_MB=2048
TEMP_DIR=/app/tmp
STORAGE_DIR=/app/storage
