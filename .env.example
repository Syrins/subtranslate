# ============================================
# SubTranslate â€” Environment Variables
# ============================================
# Used by docker-compose.yml for all services.
# Copy this file to .env and fill in your values.
# For Coolify: these are auto-detected from docker-compose.yml
# and editable in Coolify's Environment Variables UI.

# --- Required (deployment will fail without these) ---

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# CORS (your frontend domain)
CORS_ORIGINS=https://yourdomain.com

# Frontend build args (baked into JS at build time)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# --- Optional ---

# Cloudflare R2 Storage
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_ENDPOINT=
R2_BUCKET_NAME=subtranslate
R2_CDN_DOMAIN=

# AI Translation Keys (system-level defaults)
OPENAI_API_KEY=
DEEPL_API_KEY=
GEMINI_API_KEY=

# Debug mode
DEBUG=false
